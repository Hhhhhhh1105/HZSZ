<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_white_gray"
        android:orientation="vertical"
        android:paddingBottom="@dimen/page_item_padding_v"
        android:paddingLeft="@dimen/page_item_padding_h"
        android:paddingRight="@dimen/page_item_padding_h"
        android:paddingTop="@dimen/page_item_padding_v" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/tv_source_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="杭州东新工量具厂"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_medium"
            android:layout_marginTop="@dimen/padding_medium"
            android:baselineAligned="false" >

            <ImageView
                android:layout_width="24dp"
                android:layout_height="18dp"
                android:src="@drawable/umeng_socialize_location_ic"
                />

            <TextView
                android:id="@+id/tv_basin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="钱塘江流域"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/littlelightgray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="·"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>

            <TextView
                android:id="@+id/tv_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="455m"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/red"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>